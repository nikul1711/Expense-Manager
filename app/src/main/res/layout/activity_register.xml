<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:gravity="center"
    tools:context=".ui.activities.RegisterActivity">

    <TextView
        style="@style/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="@dimen/_24ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            style="@style/headingTextWithoutPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/ed_border_only_bg"
            android:hint="Joe beoden"
            android:padding="@dimen/_4sdp" />

        <TextView
            style="@style/headingTextWithoutPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Email address"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/ed_border_only_bg"
            android:hint="joebeoden@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_4sdp" />

        <TextView
            style="@style/headingTextWithoutPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Password"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/ed_border_only_bg"
            android:hint=" *****"
            android:inputType="textPassword"
            android:padding="@dimen/_4sdp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/addEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_32sdp"
            android:padding="@dimen/_6sdp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/primaryTextButtonColor"
            app:cornerRadius="@dimen/_8sdp" />


        <TextView
            style="@style/headingTextWithoutPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:text="or"
            android:textSize="@dimen/_8ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/ed_border_only_bg">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:src="@drawable/google_icon"
                android:layout_height="@dimen/_20sdp" />

            <TextView
                style="@style/headingTextWithoutPadding"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>