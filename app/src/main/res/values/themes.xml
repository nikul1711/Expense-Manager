<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ExpenseManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="headingText">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/manrope_extrabold</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="secondaryText">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>


    <style name="regularText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/manrope</item>
    </style>
</resources>